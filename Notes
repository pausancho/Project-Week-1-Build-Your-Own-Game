#def user_message():

def encryption(): 
    message = input("Please enter the message yout would like to encrypt: ")
    global encryption_key
    encryption_key = "ab&cdefg$hijkl@mnopqr&setÂ¿uv?wxyz"
    global encrypt_message
    encrypt_message = ""
    for i in message: 
        input_value = encryption_key.find(i)
        new_value = (input_value + 5) % 32
        encrypt_message+=encryption_key[new_value]
    print(encrypt_message)

def activate_decript():
    decript_message = ()
    
def decryption():
    decrypt_message = ""
    for i in encrypt_message: 
        recover_value = encryption_key.find(i)
        old_position = (recover_value - 5) % 32
        decrypt_message+=encryption_key[old_position]
    print(decrypt_message)
